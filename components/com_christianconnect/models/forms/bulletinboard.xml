<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
			<field name="title" type="text" default="" size="33"
            label="COM_CHRISTIAN_BULLETIN_TITLE_LABEL"
            description="COM_CHRISTIAN_BULLETIN_TITLE_DESC" required="true"/> 
            
            <field name="description" type="textarea" default="" cols="50" rows="8"
            label="COM_CHRISTIAN_BULLETIN_DESCRIPTION_LABEL"
            description="COM_CHRISTIAN_BULLETIN_DESCRIPTION_DESC"/> 
            
            <field name="start_date" type="calendar" default=""
            label="COM_CHRISTIAN_BULLETIN_START_DATE_LABEL"
            description="COM_CHRISTIAN_BULLETIN_START_DATE_DESC" /> 
            
             <field name="end_date" type="calendar" default=""
            label="COM_CHRISTIAN_BULLETIN_END_DATE_LABEL"
            description="COM_CHRISTIAN_BULLETIN_END_DATE_DESC" />
            
            <field name="published" type="list"
			label="JSTATUS" description="COM_CHRISTIAN_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			</field>
            
            <field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
          
	</fieldset>

</form>
